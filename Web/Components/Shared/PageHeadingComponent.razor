<PageTitle>@HeaderText</PageTitle>

<header class="mx-auto 
	max-w-7xl 
	mb-6
	p-1 
	sm:px-4 
	md:px-6 
	lg:px-8 
	rounded-md 
	shadow-md 
	shadow-blue-500">

	@switch (Level)
	{
		case "1":

			<h1 class=@($"text-3xl font-bold tracking-tight {TextColorClass}")>@HeaderText</h1>

			break;

		case "2":

			<h2 class=@($"text-2xl font-bold tracking-tight {TextColorClass}")>@HeaderText</h2>

			break;

		case "3":

			<h3 class=@($"text-1xl font-bold tracking-tight {TextColorClass}")>@HeaderText</h3>

			break;
	}

</header>

@code {

	[Parameter] public string HeaderText { get; set; } = "My Blog";

	[Parameter] public string Level { get; set; } = "1";

	[Parameter] public string TextColorClass { get; set; } = "text-gray-50";

}